<form>
  <label>[DBC] Discovery Event Dashboard Per Machine</label>
  <description>This dashboard monitors the Discovery events from the DBC-Security appliance. When using along with DB Cyerbetch Splunk TA, use sourcetype="dbn:dbn6300:discoveryEvents"</description>
  <fieldset submitButton="true">
    <input type="dropdown" token="index1">
      <label>Select Index</label>
      <choice value="*">ALL</choice>
      <fieldForLabel>index</fieldForLabel>
      <fieldForValue>index</fieldForValue>
      <search>
        <query>| eventcount summarize=false index=* | dedup index | top index</query>
      </search>
    </input>
    <input type="dropdown" token="sourcetype1">
      <label>Select Sourcetype</label>
      <choice value="*">ALL</choice>
      <choice value="dbn*">dbn*</choice>
      <default>*</default>
      <fieldForLabel>sourcetype</fieldForLabel>
      <fieldForValue>sourcetype</fieldForValue>
      <search>
        <query>earliest=-1d index=* "dbn" | dedup sourcetype |sort  sourcetype</query>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </search>
    </input>
    <input type="dropdown" token="machine" searchWhenChanged="false">
      <label>Select Machine</label>
      <search>
        <query>earliest=-10d (index=*)
system_identifier=* |
fields system_identifier | top system_identifier limit=50 | SORT system_identifier</query>
        <earliest>0</earliest>
      </search>
      <fieldForLabel>system_identifier</fieldForLabel>
      <fieldForValue>system_identifier</fieldForValue>
    </input>
    <input type="time" token="time1" searchWhenChanged="false">
      <label>Select Time Period</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <chart>
        <title>[$machine$] New Database Service Identified</title>
        <search>
          <query>index=$index1$ sourcetype="$sourcetype1$" system_identifier=$machine$ AND "mds_new_service" | timechart count by system_identifier</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
          <refresh>10m</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="charting.chart">column</option>
        <option name="charting.chart.showDataLabels">none</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>[$machine$] New Conversation Identified</title>
        <search>
          <query>index=$index1$ sourcetype="$sourcetype1$" system_identifier=$machine$ AND "tally_new_ipseity" | timechart count by system_identifier</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
          <refresh>10m</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.chart">column</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>[$machine$] New Host Identified</title>
        <search>
          <query>index=$index1$ sourcetype="$sourcetype1$" system_identifier=$machine$ AND "mds_new_host" | timechart count by system_identifier</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
          <refresh>10m</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="charting.chart">column</option>
        <option name="charting.chart.showDataLabels">none</option>
      </chart>
    </panel>
    <panel>
      <chart>
        <title>[$machine$] New Users Identified</title>
        <search>
          <query>index=$index1$ sourcetype="$sourcetype1$" system_identifier=$machine$ AND "mds_new_user" | timechart count by system_identifier</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
          <refresh>10m</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="charting.chart">column</option>
        <option name="charting.chart.showDataLabels">none</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>[$machine$] New Database Service Identified Table</title>
        <search>
          <query>index=$index1$ sourcetype="$sourcetype1$" system_identifier=$machine$ AND "mds_new_service" | table _time system_identifier service_name service_name_type dialect</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
          <sampleRatio>1</sampleRatio>
          <refresh>10m</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="count">10</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">true</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>[$machine$] New Conversation Identified</title>
        <search>
          <query>index=$index1$ sourcetype="$sourcetype1$" system_identifier=$machine$ AND "tally_new_ipseity" | table _time system_identifier client_addr server_addr server_port</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
          <sampleRatio>1</sampleRatio>
          <refresh>10m</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="count">10</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">true</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>[$machine$] New Host Identified</title>
        <search>
          <query>index=$index1$ sourcetype="$sourcetype1$" system_identifier=$machine$ AND "mds_new_host" | table _time system_identifier addr</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
          <sampleRatio>1</sampleRatio>
          <refresh>10m</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="count">10</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">true</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
    <panel>
      <table>
        <title>[$machine$] New Users Identified</title>
        <search>
          <query>index=$index1$ sourcetype="$sourcetype1$" system_identifier=$machine$ AND "mds_new_user" | table _time system_identifier user_name default_schema</query>
          <earliest>$time1.earliest$</earliest>
          <latest>$time1.latest$</latest>
          <sampleRatio>1</sampleRatio>
          <refresh>10m</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="count">10</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">true</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
</form>
